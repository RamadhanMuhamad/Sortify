<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="0dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Artikel 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_article1"
                    android:layout_width="105dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_news"
                    app:shapeAppearanceOverlay="@style/ShapeImageRadius" />

                <TextView
                    android:id="@+id/tv_article_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sampah Plastik Cemari\nSungai di Indonesia"
                    android:textAlignment="center"
                    android:textColor="@color/custom_text"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Artikel 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_article2"
                    android:layout_width="105dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_news"
                    app:shapeAppearanceOverlay="@style/ShapeImageRadius" />

                <TextView
                    android:id="@+id/tv_article_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inovasi Teknologi\nPengelolaan Sampah"
                    android:textAlignment="center"
                    android:textColor="@color/custom_text"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Artikel 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_article3"
                    android:layout_width="105dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_news"
                    app:shapeAppearanceOverlay="@style/ShapeImageRadius" />

                <TextView
                    android:id="@+id/tv_article_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemanfaatan\nSampah Organik"
                    android:textAlignment="center"
                    android:textColor="@color/custom_text"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>
